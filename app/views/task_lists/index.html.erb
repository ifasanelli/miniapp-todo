<div class="container">
  <div class="row row-cols-2 my-5">
    <div class="col-8">
      <h1 class='display-4'>Minhas Listas</h1>
    </div>
    <div class="col-2">
      <%= link_to '+ Nova Lista', new_task_list_path, class:"btn btn-success" %>
    </div>
  </div>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Visibilidade</th>
      </tr>
    </thead>
    <tbody>
      <% @task_lists.each do |task_list|  %>
          <tr>
              <td><%= link_to task_list.name, task_list_path(task_list) %></td>
              <td>
                <% if task_list.personal? %>
                  <span class='text-danger'>Privada</span>
                <% elsif task_list.shared? %>
                  <span class='text-info'>PÃºblica</span>
                <% end %>
              </td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>