<!DOCTYPE html>
<html>
  <head>
    <title>ToDo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <%= link_to 'ToDo', '/', class: 'navbar-brand d-inline-block align-top' %>
      <div class="collapse navbar-collapse">
        <% if current_user %>
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active my-auto mx-3 item-nav">
              <%= link_to 'Minhas Listas', root_path %>
            </li>
            <li class="nav-item active my-auto mx-3 item-nav">
              <%= link_to 'Listas Favoritas', root_path %>
            </li>
            <li class="nav-item active my-auto mx-3 item-nav">
              <%= link_to 'Descobrir', root_path %>
            </li>
          </ul>
        </div>
        <div class="dropdown-divider"></div>
        <%= link_to 'Sair', destroy_user_session_path, method: :delete, class:"btn btn-outline-light" %>
      <% end %>
    </nav>

    <% if alert %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong><%= alert %></strong>
      </div>
    <% elsif notice %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong><%= notice %></strong>
      </div>
    <% end %>

    <%= yield %>
  </body>
  <script>
    $(".alert" ).fadeOut(4000);
  </script>
</html>
